{
    "env": {
        "browser": true
    },
    "globals": {
      "$": 1
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
           2 
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}

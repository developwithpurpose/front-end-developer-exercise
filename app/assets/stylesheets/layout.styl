blockheight = 942px
headheight = 276px
headmargin = 60px
contentheight = blockheight - headheight - headmargin

/**
 * MAIN BLOCK CONTAINER
 */
.block
  width 980px
  margin 0 auto
  min-height blockheight

  &__overflow
    overflow hidden
    width 100%;
    height 100%;

  .js &
    height blockheight

/**
 * PHOTOGRAPHIC HEADER
 */
.header
  clearfix()
  height headheight
  margin-bottom headmargin

  &__caption
    float right

/**
 * COLUMNS UNDER HEADER
 */
.columns
  clearfix()
  min-height contentheight
  display table

  .js &
    overflow hidden

  &__col
    display table-cell
    vertical-align top

    &--one
      width 380px

      &:first-child, &:last-child
        width 300px

    &--two
      width 680px

    &--three
      width 980px

    &--grey
      background #ebeced url('data:image/png;base64,') right top repeat-y

global-reset();

*, *:before, *:after
    box-sizing border-box;

html 
    font-size 100%;

body
    background #bbbfc2;
    font-family $font-default;
    line-height 1.2;
    color $color-black;
    padding 0 0 40px;

a
    color inherit;
    text-decoration none;

img
    max-width 100%;
    height auto;

strong
    font-weight bold;

.container
    max-width $container-width;
    width 100%;
    margin 0 auto;
    clearfix();


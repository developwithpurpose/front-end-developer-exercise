<!doctype html>
<html>
<head>
    <title>The Seven Baby Steps</title>
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600|Work+Sans" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/assets/stylesheets/compiled/main.css"/>
</head>

<body>
    <div class="header"></div>
    <div class="baby-steps">
        <div class="step-outline">
            {{#each steps}}
            <div class="step-outline__step step-outline__step--{{num}}">
                <div class="step-name">{{title}}</div>
                <div class="step-logo"></div>
            </div>
            {{/each}}
        </div>
        <div class="step-info">
            {{#each steps}}
            <div class="step step--{{num}}">
                <div class="step__header">
                    <div class="step__logo"></div>
                    <div class="step__title">{{title}}</div>
                    <div class="step__goal">{{goal}}</div>
                </div>
                <div class="step__description">
                    <p>{{description}}</p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</body>
</html>

<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= "#{current_page.data.title} | Real Life, Love and Money with America's Most Trusted Guy" %></title>

    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,300,600|Open+Sans:300,700' rel='stylesheet' type='text/css'>

    <%= stylesheet_link_tag :site %>
  </head>

  <body class="<%= page_classes %>">
    <div class="wrapper">
      <div class="baby-steps">
        <div class="header">
          <div class="header__container">
            <h1 class="header__title">Real Life, Love and Money with</h1>
            <h2 class="header__subtitle">America's Most Trusted Guy</h2>
          </div>
        </div>
        <div class="container">
          <%= partial 'partials/sidebar' %>
          <div class="content">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
    <%= javascript_include_tag :bundle %>
  </body>
</html>
